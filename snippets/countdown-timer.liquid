<script>
    function updateCountdown() {
        const now = new Date();
        // Determine the offset for EST considering daylight saving time
        const estOffset = now.getTimezoneOffset() === 300 ? -4 : -5;
        const targetHour = 16; // 4 PM EST
      
        let currentTimeEST = new Date(now.getTime() + estOffset * 3600 * 1000);
        let countdownDate = new Date(
          currentTimeEST.getFullYear(),
          currentTimeEST.getMonth(),
          currentTimeEST.getDate(),
          targetHour,
          0,
          0
        );
      
        // Check if the current EST time is past 4 PM
        if (currentTimeEST.getHours() >= targetHour) {
          countdownDate.setDate(countdownDate.getDate() + 1); // Set countdown for the next day
          document.getElementById("day").textContent = "tomorrow";
        } else {
          document.getElementById("day").textContent = "today";
        }
      
        // Calculate the time remaining until the countdownDate
        let diff = countdownDate - now;
      
        // If we're past 4 PM EST, adjust the difference for the next day's countdown
        if (diff < 0) {
          diff += 24 * 60 * 60 * 1000; // Add one day's worth of milliseconds
          document.getElementById("day").textContent = "tomorrow"; // Ensure the 'day' span shows 'tomorrow'
        }
      
        // Extract hours, minutes, and seconds from the difference
        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      
        // Format the countdown string, always displaying hours
        let countdownString = `${hours}h ${minutes}m ${seconds}s`;
      
        // Display the formatted countdown string
        document.getElementById("countdown").textContent = countdownString;
      }
      
      // Set up the countdown to update every second
      const intervalId = setInterval(updateCountdown, 1000);
      
    </script>